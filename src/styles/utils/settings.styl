$global = {

  container: {
    elastic-width: 1370px
    xs-gap-x: 20px
  }
  
  family: {
    sans-serif: unquote('"Aleo", Helvetica, Arial, sans-serif')
    serif:      unquote(' Georgia, "Times New Roman", Times, serif')
    monospace:  unquote('Menlo, Monaco, Consolas, "Courier New", monospace')
    button:     unquote('Campton-Bold', sans-serif)
    title:     unquote('Campton-Light', sans-serif)
  }

  
  title: { 
    // control classes: .util-t--{SIZE}
    XXL : 26px
    XL  : 22px
    L   : 18px
    M   : 16px
    S   : 14px
    XS  : 12px
    XXS : 10px
  }
  
  typography: {
    // sizes for components/Ui/Typography.js
    base: 14px
    h1: 34px
    h2: 24px
    h3: 18px
    h4: 16px
  }
  
  color: {
    body: #e3e1dd
    primary: #32c5d2
    secondary: #3697d5
    brand: #847a6c
    success: #27a4b0
    info:    #5bc0de
    warning: #f0ad4e
    danger:  #e73d4a //Bootstrap
    border: #bdbdbd
    border-hover: #66afe9
    // from dark to white: opacity 1 .7 .5 .4 .3
    dark: #000 #4d4d4d #808080 #999 #b3b3b3
    // from white to dark: opacity 0 .04 .06 .1 .15 .2
    light: #fff #f5f5f5 #f0f0f0 #e6e6e6 #d9d9d9 #ccc
  }

  grid: {
    columns: 24
    base-gap: 15px
  }
  
  namespace: {
    utils: 'util'
    flex-tools: 'f'
  }
  
  path: {
    img: 'img/'
  }

  transition: 350ms
  gap: 5px

  //similar to bootstrap
  breakpoints: {
    lg: 1201px
    md: 961px
    sm: 769px
    xs: 481px
    xxs:320px
  }

}

// aliases
$global.color.error   = $global.color.danger
$global.color.link = $global.color.secondary


// shortcuts
$g = $global
$dark = $global.color.dark
$light = $global.color.light
$gap = $global.gap
$bp = $global.breakpoints
$c = $global.color
